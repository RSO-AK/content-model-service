<?xml version="1.0" encoding="UTF-8"?>
<persistence xmlns="http://xmlns.jcp.org/xml/ns/persistence" version="2.1">
    <persistence-unit name="rso-content-model-jpa" transaction-type="RESOURCE_LOCAL">
        <non-jta-data-source>jdbc/ContentModelDS</non-jta-data-source>

        <class>si.fri.rso.rsocontentmodel.models.entities.ContentModelEntity</class>
        <class>si.fri.rso.rsocontentmodel.models.entities.AttributeEntity</class>
        <class>si.fri.rso.rsocontentmodel.models.converters.InstantAtributeConverter</class>

        <properties>
            <property name="javax.persistence.schema-generation.database.action" value="drop-and-create"/>
            <property name="javax.persistence.schema-generation.create-source" value="metadata"/>
            <property name="javax.persistence.schema-generation.drop-source" value="metadata"/>
        </properties>
    </persistence-unit>
</persistence>
